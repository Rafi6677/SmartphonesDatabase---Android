<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AddDataActivity">

    <Button
            android:text="Anuluj"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/websiteInput" android:textSize="20sp"
            android:id="@+id/cancel_button"
            app:layout_constraintStart_toEndOf="@+id/website_button" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/saveChanges_button" android:layout_marginRight="8dp"/>
    <Button
            android:text="WWW"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/websiteInput" android:textSize="20sp"
            android:id="@+id/website_button"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="WWW: "
            android:layout_width="100sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/website_textview"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/websiteInput"
            app:layout_constraintBottom_toBottomOf="@+id/websiteInput"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/websiteInput"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:hint="adres WWW"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/systemVersionInput"
            app:layout_constraintStart_toEndOf="@+id/website_textview" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="Wersja systemu: "
            android:layout_width="100sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/systemVersion_textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/systemVersionInput" app:layout_constraintBottom_toBottomOf="@+id/systemVersionInput"/>
    <TextView
            android:text="Producent: "
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/manufacturer_textview"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/brandInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/brandInput"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/brandInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/manufacturer_textview"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:textSize="20sp"
            android:hint="producent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@android:color/black"
            android:id="@+id/modelInput" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/brandInput" android:hint="model"
            app:layout_constraintStart_toEndOf="@+id/model_textview" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Model: "
            android:layout_width="100sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/model_textview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/modelInput"
            app:layout_constraintTop_toTopOf="@+id/modelInput" android:textSize="20sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/systemVersionInput" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/modelInput"
            app:layout_constraintStart_toEndOf="@+id/systemVersion_textView" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:hint="Wersja systemu"/>
    <Button
            android:text="zapisz"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/websiteInput" android:textSize="20sp"
            android:id="@+id/saveChanges_button"/>
</android.support.constraint.ConstraintLayout>