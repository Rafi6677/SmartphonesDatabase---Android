<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/notSelected">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/brand_textview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:text="brand"
            android:textColor="@android:color/black"
            android:paddingBottom="5dp"
    />
    <TextView
            android:text="model"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/model_textview"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingBottom="10dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="200dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="200dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/line" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:id="@+id/line2"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toStartOf="@+id/model_textview"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>